<Window x:Class="rpm7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpm7"
        mc:Ignorable="d"
        Title="Серия чисел" Height="650" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,10">
            <Button x:Name="btnAbout" Content="О программе " Margin="0,0,10,0"/>
            <Button x:Name="btnExit" Content="Выход" Margin="10,0,0,0"/>
        </StackPanel>
        <GroupBox Header="-- Прогрессия --">
            <ListBox x:Name="lbSeries" />
        </GroupBox>
        <GroupBox Header="Работа с прогрессией" Grid.Column="1">
            <StackPanel Margin="0,10,0,0">
                <Label Content="Задать начальное значение:"/>
                <TextBox x:Name="tbGetSet" TextWrapping="Wrap" Width="200"/>
                <Label Content="Задать предел прогрессии:"/>
                <TextBox x:Name="tbLimit" TextWrapping="Wrap" Width="200"/>
                <Label Content="Рассчитать прогрессию:"/>
                <Button Content="Рассчитать"  Width="200" Click="Button_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
