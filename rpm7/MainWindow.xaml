<Window x:Class="rpm7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpm7"
        mc:Ignorable="d"
        Title="Серия чисел" Height="650" Width="700" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,10">
            <Button x:Name="btnAbout" Content="О программе " Margin="0,0,10,0" Click="btnAbout_Click"/>
            <Button x:Name="btnExit" Content="Выход" Margin="10,0,0,0"/>
        </StackPanel>
        <GroupBox Header="-- Прогрессия --" Grid.RowSpan="2">
            <ListBox x:Name="lbSeries" SelectionMode="Multiple" />
        </GroupBox>
        <GroupBox Header="Работа с прогрессией" Grid.Column="1">
            <StackPanel Margin="0,10,0,0">
                <Label Content="Задать начальное значение:"/>
                <TextBox x:Name="tbGetSet" TextWrapping="Wrap" Width="250"/>
                <Label Content="Задать предел прогрессии:"/>
                <TextBox x:Name="tbLimit" TextWrapping="Wrap" Width="250"/>
                <Label Content="Рассчитать прогрессию:"/>
                <Button x:Name="btnSer" Content="Рассчитать"  Width="250" Click="btnSer_Click"/>
                <Button x:Name="btnClean" Content="Очистить" Click="btnClean_Click" Margin="0,10,0,0" Width="250"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="GroupBox" Grid.Row="1">
            <StackPanel Margin="0,10,0,0" Height="287">
                <Button x:Name="btnClone" Content="Клонировать элемент" Margin="0,10,0,0" Width="250" Click="btnClone_Click" />
                <Button x:Name="btnComp" Content="Сравнить элементы" Margin="0,10,0,0" Width="250" Click="btnComp_Click"/>
                <TextBox x:Name="tbRezComp" TextWrapping="Wrap" Width="250" Margin="0,20,0,0" Height="40" IsReadOnly="True"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
